<header class="offset-md-1 col-md-10 col-xs-12">

  <div class="d-flex flex-wrap align-items-center">
    <a class="mx-3" href="#">
      <h1 id="Titulo" class="text-dark">
        DAW2
      </h1>
    </a>
  </div>

  <nav class="navbar navbar-expand-lg navbar-light bg-light mt-2">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "Usuarios", usuarios_index_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Añadir usuario", new_usuario_path, class: "nav-link" %>
        </li>

        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Cerrar sesión", destroy_user_session_path, method: :delete, class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Iniciar sesión", new_user_session_path, class: "nav-link" %>
          </li>

          <li class="nav-item">
            <%= link_to "Registrarse", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>

      </ul>

      <ul class="navbar-nav">
        <% if user_signed_in? %>
        <li class="nav-item">
          <span class="nav-item">Usuario: <%= current_user.email %></span>
        </li>
        <% end %>
      </ul>

    </div>
  </nav>
</header>