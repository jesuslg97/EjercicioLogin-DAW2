            <% if devise_mapping.rememberable? %>
              <div class="field form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, "Recordar sesi칩n" %>
              </div>
            <% end %>

            <div class="actions d-flex justify-content-center mb-2">
              <%= f.submit "Guardar", class: "btn btn-dark" %>
            </div>
          <% end %>

        </div>

      </div>
    </div>
  </div>
</section>