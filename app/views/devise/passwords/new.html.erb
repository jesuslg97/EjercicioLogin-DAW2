<section class="offset-lg-4 col-lg-4 offset-md-2 col-md-8 col-xs-12 custom-form">

  <div class="d-flex justify-content-center mt-5 content">
    <div class="col-md-10 col-xs-12">
      <div class="row">
        <div class="col-12 text-center mt-3">
          <h2>¿Olvidastes la contraseña?</h2>
          <hr class="teal accent-3 mb-4 mt-0 mx-auto border-dark" style="width: 200px;">
        </div>

        <div class="col-12">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field form-group">
              <%= f.label :email, "Correo electrónico" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="actions d-flex justify-content-center mb-2">
              <%= f.submit "Enviar", class: "btn btn-dark" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>

      </div>
    </div>
  </div>
</section>